<%= form_for [:layer_test, @company], html: { 'up-follow': '' } do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <div class="input-group">
      <%= form.text_area :address, class: 'form-control', rows: 6 %>
      <span class="input-group-append">
        <span class="input-group-text">TODO: Map link</span>
      </span>
    </div>
  </div>

  <%= form.submit "Save", class: 'btn btn-primary mt-2' %>

<% end %>
